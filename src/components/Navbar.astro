---
interface Navs{
    name: string;
    link: string;
}

const navs:Navs[] = Astro.props.navs || [
    {name: "Social 1", link: "Link"},
    {name: "Social 2", link: "Link"},
    {name: "Social 3", link: "Link"}
]
---

<style lang="sass">
  ul
    list-style-type: none
    display: flex
    flex-direction: row
    column-gap: 28px
    .navbar-ul li a
        text-decoration: none
</style>
<ul class="navbar-ul">
  {
    navs.map((nav) => (
      <li>
        {/* check kalau ada link-nya */}
        {nav.link ? (
                <a href={nav.link} target="_blank" rel="noopener noreferrer">
                  <p>{nav.name}</p>
                </a>
              ) : (
                <p>{nav.name}</p>
              )}
      </li>
    ))
  }
</ul>
